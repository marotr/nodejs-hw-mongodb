                    "message": {
                      "type": "string",
                      "example": "Successfully retrieved a contact with id 66c9f7308580fb28c274c5e3!"
                    },
                    "data": {
                      "$ref": "#/components/schemas/contact"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/404"
          }
        }
      },
